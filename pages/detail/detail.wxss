/* pages/detail/detail.wxss */
.tabbar{
    position: fixed;
    bottom: 0;
    right: 0;
}
.top{
    width:100%;
    height: 680rpx;
}

.inner text{
    font-size: 20rpx;
    color: #157658;
}
.right{
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    width: 78rpx;
    height: 120rpx;
    border-left:2px dashed #F5F5F5;
}
.sku-pending{
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    margin:10rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color:#333;
    padding: 0 30rpx;
}
.specs  > text:first-child{
    color:#999;
    font-size: 24rpx;
}
.specs > text:nth-child(2){
    color: #157658;
    font-size: 24rpx;
}
