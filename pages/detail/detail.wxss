.explain{
    margin-top:10rpx;
    background-color: #fff;
    padding:20rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.detail-img{
    width: 100%;
    display: flex;
    margin-top:10rpx;
}
