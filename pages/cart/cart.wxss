page{
    background-color: #f3f4f6;
}
.empty-container{
    width: 100%;
    height: 800rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #f3f4f6;
}
.total-container{
    box-sizing: border-box;
    width: 100%;
    height: 88rpx;
    background: rgba(255,255,255,1);
    box-shadow: 0px 0px 4px 0px rgba(210,210,210,0.5);
    position: fixed;
    bottom: 0;
    padding-left:30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    z-index: 99;
}
.data-container{
    display: flex;
    flex:1 1 auto;
    flex-direction: row;
    align-content: center;
    justify-content: space-between;
}
.checkbox-container{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.checkbox-container > text{
    margin-left: 30rpx;
    color:#333;
    font-size: 24rpx;
}
.price-container{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.price-container>text{
    color:#333;
    font-size: 28rpx;
    margin-right: 24rpx;
}
.settlement-btn{
    width: 200rpx;
    height: 100%;
    background-color: #157658;
    margin-left: 24rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 28rpx;
    color:#fff;
}
.settlement-btn > text{
    max-width: 190rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.status-btn{
    border-radius:  1rpx !important;
    background-color: #157658 !important;
}
.disabled{
    opacity: 0.5;
}
