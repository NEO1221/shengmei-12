.container{
    box-sizing: border-box;
    width: 100%;
    height: 220rpx;
    display: flex;
    flex-direction: row;
    padding:30rpx;
    border-top:2rpx solid #f3f3f3;
}
.checkbox{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin-right: 30rpx;
}
.sku-container{
    height: 160rpx;
    flex : 1 1 auto;
    display: flex;
    flex-direction: row;
}
.image-container{
    position: relative;
    height: 160rpx;
    width: 160rpx;
    margin-right: 20rpx;
}
.left{
    width: 160rpx;
    height: 160rpx;
}
.image-sold-out{
    background: #157658;
    position: absolute;
    height: 100%;
    width: 100%;
    opacity: 0.5;
    color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center ;
}
.right{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.price-container{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.disabled{
    opacity: 0.5;
}
.sold-out{
    position: absolute;
    height: 160rpx;
    width: 620rpx;
}
.spec{
    font-size: 20rpx;
    color:#666
}
.title-container{
    display: flex;
    flex-direction: row;
    align-items: center;
}
.title{
    margin-left:10rpx;
    font-size:28rpx;
}
.description-container{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.slide{
    width: 200rpx;
    height: 220rpx;
    color:#fff;
    background-color: #9E2731;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}