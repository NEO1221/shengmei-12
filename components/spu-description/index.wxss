.container{
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
    padding: 34rpx 30rpx 26rpx 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.left{
    flex:1;
    display: flex;
    flex-direction: column;
}
.subtitle{
    color:#999;
    font-size: 28rpx;
    font-weight: 400;
    margin:40rpx 0 16rpx 0 ;
}
.price-row{
    display: flex;
    align-items: center;
}
.discount-price{
    margin: 0 80rpx 0 20rpx
}
.discount-tag{
    position: absolute !important;
    bottom: 4rpx;
    width: 50rpx;
    border-radius: 20rpx !important;
}
.l-price-unit{
    margin-right: 14rpx !important;
}
.tags{
    display: flex;
}
.inner{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #DCEBE6 !important;
    width: 50rpx;
    height: 120rpx;
}
.inner text{
    font-size: 20rpx;
    color: #157658;
}
.right{
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    width: 78rpx;
    height: 120rpx;
    border-left:2px dashed #F5F5F5;
}
.sku-pending{
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    margin:10rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color:#333;
    padding: 0 30rpx;
}
.specs  > text:first-child{
    color:#999;
    font-size: 24rpx;
}
.specs > text:nth-child(2){
    color: #157658;
    font-size: 24rpx;
}
.specs{
    width:450rpx;
}